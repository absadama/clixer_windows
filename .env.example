# ========================================
# CLIXER - Environment Variables
# ========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your_super_secret_key_here_min_32_chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# ========================================
# DATABASE - PostgreSQL
# ========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=clixer
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=clixer

# ========================================
# DATABASE - ClickHouse
# ========================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=clixer
CLICKHOUSE_PASSWORD=your_clickhouse_password
CLICKHOUSE_DATABASE=clixer_analytics

# ========================================
# CACHE - Redis
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ========================================
# APPLICATION
# ========================================
NODE_ENV=development
LOG_LEVEL=info

# ========================================
# SERVICES PORTS
# ========================================
GATEWAY_PORT=4000
AUTH_PORT=4001
CORE_PORT=4002
DATA_PORT=4003
NOTIFICATION_PORT=4004
ANALYTICS_PORT=4005
