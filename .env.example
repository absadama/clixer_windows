# ========================================
# CLIXER - Environment Variables
# ========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin
# PRODUCTION'da tüm değerleri güvenli değerlerle değiştirin!

# ========================================
# JWT AUTHENTICATION (ZORUNLU)
# ========================================
# Production'da en az 64 karakterlik rastgele string kullanın
# Örnek: openssl rand -hex 32
JWT_SECRET=your_super_secret_key_here_min_32_chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# ========================================
# ENCRYPTION (ZORUNLU - Production)
# ========================================
# Database şifrelerini encrypt etmek için kullanılır
# Örnek: openssl rand -hex 32
ENCRYPTION_KEY=your_encryption_key_min_32_chars

# ========================================
# DATABASE - PostgreSQL
# ========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=clixer
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=clixer

# ========================================
# DATABASE - ClickHouse
# ========================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=clixer
CLICKHOUSE_PASSWORD=your_clickhouse_password
CLICKHOUSE_DATABASE=clixer_analytics

# ========================================
# CACHE - Redis
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password  # Opsiyonel

# ========================================
# APPLICATION
# ========================================
NODE_ENV=development
LOG_LEVEL=info

# ========================================
# CORS (Production için önemli)
# ========================================
# Virgülle ayrılmış izin verilen origin'ler
# Örnek: https://app.clixer.com,https://admin.clixer.com
CORS_ORIGIN=*

# ========================================
# SERVICES PORTS
# ========================================
GATEWAY_PORT=3000
AUTH_SERVICE_PORT=4001
CORE_SERVICE_PORT=4002
DATA_SERVICE_PORT=4003
NOTIFICATION_SERVICE_PORT=4004
ANALYTICS_SERVICE_PORT=4005

# ========================================
# FRONTEND
# ========================================
VITE_API_URL=/api
# Production'da frontend URL'i (screenshot servisi için)
# Örnek: https://app.clixer.com
FRONTEND_URL=http://localhost:3000

# ========================================
# SCREENSHOT SERVICE (Report Subscriptions)
# ========================================
# İzin verilen host'lar (SSRF koruması için)
# Production'da domain'inizi ekleyin
# Örnek: app.clixer.com,localhost,127.0.0.1
SCREENSHOT_ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# LDAP (Opsiyonel - Kurumsal SSO için)
# ========================================
# LDAP_ENABLED=false
# LDAP_URL=ldap://your-ldap-server:389
# LDAP_BIND_DN=cn=admin,dc=company,dc=com
# LDAP_BIND_PASSWORD=your_ldap_password
# LDAP_BASE_DN=dc=company,dc=com

# ========================================
# 2FA (Opsiyonel)
# ========================================
# 2FA_ISSUER=Clixer

# ========================================
# LOGGING (Production)
# ========================================
# LOG_FORMAT=json
# LOG_FILE=/var/log/clixer/app.log
