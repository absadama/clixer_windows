[Unit]
Description=Clixer Auth Service
Documentation=https://github.com/absadama/clixer_windows
After=network.target docker.service clixer-gateway.service
Requires=docker.service

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/clixer/services/auth-service
ExecStart=/usr/bin/npm run dev
Restart=on-failure
RestartSec=10
StartLimitIntervalSec=60
StartLimitBurst=3

# Logging
StandardOutput=append:/opt/clixer/logs/auth.log
StandardError=append:/opt/clixer/logs/auth-error.log

# Environment
Environment=NODE_ENV=production
Environment=PORT=4001

# Process management
KillMode=process
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
